<Window x:Class="VirtualPrinter.Views.GlobalSettingsView"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:VirtualPrinter.Views"
		mc:Ignorable="d"
		Title="Global Settings"
		Icon="/virtual-printer.ico"
		ResizeMode="NoResize"
		WindowStyle="ThreeDBorderWindow"
		WindowStartupLocation="CenterOwner"
		Height="300"
		Width="550">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<GroupBox Margin="10"
				  Header="TCP Settings">

			<StackPanel Orientation="Vertical">
				<TextBlock Text="These settings are applied to the incoming request from an external application."
						   Margin="10,8,0,5"
						   Foreground="{StaticResource ForegroundColor3}" />
				<Grid Margin="10">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="2*" />
						<ColumnDefinition Width="1*" />
						<ColumnDefinition Width="2*" />
						<ColumnDefinition Width="1*" />
					</Grid.ColumnDefinitions>

					<Grid.RowDefinitions>
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
					</Grid.RowDefinitions>

					<TextBlock Grid.Column="0"
							   Grid.Row="0"
							   Text="Receive Timeout (ms)"
							   Margin="0,5,0,5" />
                    <TextBox Grid.Column="1"
							 Grid.Row="0"
							 Text="{Binding ReceiveTimeout, Mode=TwoWay}"
							 Margin="0,5,5,5"
							 InputScope="NumberFullWidth" />

                    <TextBlock Grid.Column="0"
							   Grid.Row="1"
							   Text="Receive Buffer Size (bytes)"
							   Margin="0,5,0,5" />
                    <TextBox Grid.Column="1"
							 Grid.Row="1"
							 Text="{Binding ReceiveBufferSize, Mode=TwoWay}"
							 Margin="0,5,5,5"
							 InputScope="NumberFullWidth" />

                    <CheckBox  Grid.Column="0"
							   Grid.Row="2"
							   IsChecked="{Binding NoDelay, Mode=TwoWay}"
							   Content="No Delay"
							   Margin="0,5,0,5">
					</CheckBox>

					<CheckBox  Grid.Column="0"
							   Grid.Row="3"
							   IsChecked="{Binding Linger, Mode=TwoWay}"
							   Content="Linger"
							   Margin="0,5,0,5">
					</CheckBox>

					<TextBlock Grid.Column="2"
							   Grid.Row="3"
							   Text="Linger Time (seconds)"
							   Margin="5,5,0,5" />
					<TextBox Grid.Column="3"
							 Grid.Row="3"
							 Text="{Binding LingerTime, Mode=TwoWay}"
							 Margin="0,5,0,5"
							 InputScope="NumberFullWidth" />
				</Grid>
			</StackPanel>
		</GroupBox>

		<!-- Buttons -->
		<StackPanel Grid.Row="1"
					Orientation="Horizontal"
					VerticalAlignment="Center"
					HorizontalAlignment="Right"
					Margin="0,0,0,8">
			<Button Content="OK"
					Command="{Binding OkCommand}"
					Width="75"
					Height="23"
					Margin="5,0,5,0"
					BorderThickness="1"
					BorderBrush="{StaticResource BorderColor}"
					Click="Button_Click">
				<Button.Resources>
					<Style TargetType="Border">
						<Setter Property="CornerRadius"
								Value="3" />
					</Style>
				</Button.Resources>
			</Button>

			<Button Content="Cancel"
					Command="{Binding CancelCommand}"
					Width="75"
					Height="23"
					Margin="5,0,5,0"
					BorderThickness="1"
					BorderBrush="{StaticResource BorderColor}"
					Click="Button_Click">
				<Button.Resources>
					<Style TargetType="Border">
						<Setter Property="CornerRadius"
								Value="3" />
					</Style>
				</Button.Resources>
			</Button>
		</StackPanel>
	</Grid>
</Window>
